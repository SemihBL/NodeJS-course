extends ../layouts/main-layout.pug
include ../mixins/createProduct.pug

block content

    .row
        .col-md-3
            include ../includes/category.pug

        .col-md-9
            .row
                if products.length > 0
                    each product in products
                        +createProduct(product)
                else 
                    h3.text-center.mt-5 There is no product
