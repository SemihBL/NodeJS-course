extends ../layouts/main-layout.pug

block content

    .row
        .col-md-3
            img(src=`/img/${product.image}` alt=`${product.name}`).img-fluid

        .col-md-9.ps-3
            h1.mb-3 #{product.name}
            hr
            //- a(href="").btn.btn-link.p-0.mb-3 #{category}
            a(href=`/categories/${category.name}`).btn.btn-link.p-0.mb-3 #{category.name}

            .mb-3
                h4.text-primary.mb-3 #{product.price} 
                    i.fa.fa-try
                //- button(type="submit").btn.btn-success.btn-md Add to Cart

                form(action='/cart' method='POST')
                    input(type='hidden' name='productId' value=`${product.id}`)

                    div.form-group.row.pt-3
                        label.col-sm-1.col-form-label Quantity
                        div.col-sm-1
                            input(type="text" name="quantity" value=1).form-control#quantity

                    button(type="submit").btn.btn-success.btn-sm.mt-3 Add to Cart


    .row
        .col-md-12
            hr
            p.p-3 #{product.description}