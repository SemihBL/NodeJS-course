extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")


block content

    h3 addPrd
    hr

    form(action="/admin/addPrd" method="POST")
        div.form-group.row.pt-3
            label(for="name").col-sm-2.col-form-label Name
            div.col-sm-10
                input(type="text" name="name").form-control#name

        div.form-group.row.pt-3
            label(for="price").col-sm-2.col-form-label Price
            div.col-sm-10
                input(type="text" name="price").form-control#price

        div.form-group.row.pt-3
            label(for="image").col-sm-2.col-form-label Image
            div.col-sm-10
                input(type="text" name="image").form-control#image

        div.form-group.row.pt-3
            label(for="description").col-sm-2.col-form-label Description
            div.col-sm-10
                textarea(type="text" name="description").form-control#description

        div.form-group.row.pt-3
            label(for="categoryid").col-sm-2.col-form-label Category
            div.col-sm-10
                select(name="categoryid").form-control#categoryid
                    option(value="-1") Select Category
                    each category in categories
                        option(value=`${category.id}`) #{category.name}

        div.form-group.row
            div.col-md-10.offset-sm-2.pt-3
                input(type="submit" value="AddPrd").btn.btn-primary.btn-sm
